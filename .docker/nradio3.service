[Unit]
Description=nradio3

[Service]
Type=simple
ExecStart=npm start
Restart=always
User=www-data
Group=www-data
Environment=PATH=/var/www/nradio3:/usr/bin:/usr/local/bin
Environment=NODE_ENV=production
WorkingDirectory=/var/www/nradio3
StandardOutput=append:/var/log/nradio3.log
StandardError=inherit

[Install]
WantedBy=multi-user.target
