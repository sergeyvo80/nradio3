{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:react/recommended",
    "next/core-web-vitals",
    "next/typescript"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "react",
    "@typescript-eslint"
  ],
  "rules": {
    // Здесь можно добавить свои настройки правил ESLint
    // "react/react-in-jsx-scope": "off",
    // "react/jsx-filename-extension": [1, { "extensions": [".tsx"] }],
    // "@typescript-eslint/explicit-module-boundary-types": "off"
    
    "indent": ["warn", 2],
    "quotes": ["warn", "single"],
    "semi": ["warn", "always"]
  }
}
